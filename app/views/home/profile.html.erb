<div class="profile">
  <h1>Мой профиль</h1>

  <p>
    <strong>ФИО:</strong>
    <%= @current_user.first_name %> <%= @current_user.last_name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @current_user.email %>
  </p>

  <h2>Мои забронированные туры</h2>

  <div id="tours">
    <% @tours.each do |tour| %>
      <%= render tour %>
      <p>
        <%= link_to "Подробнее", tour %>
      </p>
    <% end %>
  </div>

  <%= link_to "Создать новый тур", new_tour_path %>
</div>